<%= form_with model: @movie, url: movies_path, class:'form-wrap', local: true do |f| %>
  <div class='message-form'>
    <div class="message-field">
      <%= f.label :movie_name,  "映画名" %>
      <%= f.text_area :movie_name, class:"input-message" %>
    </div>
    <div class="tag-field", id='tag-field'>
      <%= f.label :actor_tag, "出演者タグ" %>
      <%= f.text_field :actor_tag, placeholder:",で区切ってください", class:"input-tag" %>
    </div>
    <div class="tag-field", id='tag-field'>
      <%= f.label :genre_tag, "ジャンルタグ" %>
      <%= f.text_field :genre_tag, placeholder:",で区切ってください", class:"input-tag" %>
    </div>
    <div class="tag-field", id='tag-field'>
      <%= f.label :distribution_site_tag, "配信サイトタグ" %>
      <%= f.text_field :distribution_site_tag, placeholder:",で区切ってください", class:"input-tag" %>
    </div>
    <div class="tag-field", id='tag-field'>
      <%= f.label :other_tag, "その他タグ" %>
      <%= f.text_field :other_tag, placeholder:",で区切ってください", class:"input-tag" %>
    </div>
    <div id="search-result">
    </div>
  </div>
  <div class="submit-post">
    <%= f.submit "Send", class: "submit-btn" %>
  </div>
<% end %>